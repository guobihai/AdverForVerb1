<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical"
    android:paddingRight="@dimen/list_item_margin_right">

    <TextView
        android:id="@+id/tvOrder"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/tv_order_no_bg1"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="88"
        android:textColor="@android:color/white"
        android:textSize="@dimen/chat_item_tv_size"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/tvState"
        android:layout_toRightOf="@+id/tvOrder"
        android:background="@drawable/tv_content_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvShowNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="801"
            android:textColor="@android:color/black"
            android:textSize="@dimen/chat_item_tv_size"
            android:visibility="gone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="5dp"
            android:singleLine="true"
            android:text="张三"
            android:textColor="@android:color/black"
            android:textSize="@dimen/chat_item_tv_size"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/list_item_margin_right"
        android:background="@drawable/tv_order_bg"
        android:gravity="center"
        android:padding="5dp"
        android:paddingLeft="@dimen/list_item_margin_right"
        android:paddingRight="@dimen/list_item_margin_right"
        android:text="看诊"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/chat_item_tv_size"
        android:textStyle="bold" />
</RelativeLayout>